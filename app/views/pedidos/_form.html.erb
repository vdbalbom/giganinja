<%= form_with(model: pedido, local: true) do |form| %>
  <% if pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pedido.errors.count, "error") %> prohibited this pedido from being saved:</h2>

      <ul>
      <% pedido.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :data %>
    <%= form.date_select :data %>
  </div>

  <div class="field">
    <%= form.label :hora %>
    <%= form.time_select :hora %>
  </div>

  <div class="field">
    <%= form.label :nota_fiscal %>
    <%= form.text_field :nota_fiscal %>
  </div>

  <div class="field">
    <%= form.label :valor_frete %>
    <%= form.text_field :valor_frete %>
  </div>

  <div class="field">
    <%= form.label :desconto %>
    <%= form.text_field :desconto %>
  </div>

  <div class="field">
    <%= form.label :transportadora_id %>
    <%= form.number_field :transportadora_id %>
  </div>

  <div class="field">
    <%= form.label :items %>
    <div id="items_field">
      <% @pedido.items.each do |item| %>
        <div>
          <input type="text" placeholder="ID do Produto" name="produto_ids[]" value="<%=item.produto_id%>">
          <input type="text" placeholder="Preço do Produto" name="valors[]" value="<%=item.valor%>">
          <input type="text" placeholder="Quantidade" name="quantidades[]" value="<%=item.quantidade%>">
        </div>
      <% end %>
      <div>
        <input type="text" placeholder="ID do Produto" name="produto_ids[]">
        <input type="text" placeholder="Preço do Produto" name="valors[]">
        <input type="text" placeholder="Quantidade" name="quantidades[]">
      </div>
    </div>
    <button type="button" onclick="addItemField()"> + </button>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
